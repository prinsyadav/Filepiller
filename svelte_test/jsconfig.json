{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$components": ["src/components"],
      "$components/*": ["src/components/*"],
      "$routes": ["src/routes"],
      "$routes/*": ["src/routes/*"]
    }
  },
  "include": ["src/**/*.js", "src/**/*.svelte", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
